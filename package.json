{
	"name": "who-said-that",
	"version": "0.0.1-next.0",
	"description": "Add a prefix that identifies the currently running npm script to every line of its output",
	"scripts": {
		"prepublishOnly": "pnpm run build",
		"build": "rm -rf dist && node build.mjs",
		"dev": "rm -rf dist && node build.mjs --watch",
		"test": "echo \"Error: no test specified\" && exit 1",
		"self-test": "./bin.cjs rm dist"
	},
	"main": "index.js",
	"bin": {
		"who-said-that": "bin.cjs"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"npm-run-script",
		"run-script",
		"stdout",
		"stderr",
		"output",
		"prefix"
	],
	"author": "Fatih Ayg√ºn <cyco130@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.10.1",
		"esbuild": "^0.13.2",
		"esbuild-node-externals": "^1.3.0",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"chalk": "^4.1.2"
	}
}
